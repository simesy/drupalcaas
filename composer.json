{
    "name": "simesy/drupalcaas",
    "description": "A Drupal with a content-as-a-service bent.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/simesy/drupalcaas",
    "authors": [
        {
            "name": "Simon Hobbs",
            "email": "simon@hobbs.id.au",
            "role": "Architect and developer"
        },
        {
            "name": "Feb Dao",
            "email": "feb@lilengine.co",
            "role": "Developer"
        },
        {
            "name": "Tan Nguyen",
            "email": "tan@lilengine.co",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "bower-asset/chosen": "^1",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1",
        "drupal/address": "^1",
        "drupal/admin_toolbar": "^2",
        "drupal/allowed_formats": "^1",
        "drupal/block_field": "^1",
        "drupal/chosen": "^3",
        "drupal/consumers": "^1",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9",
        "drupal/diff": "^1",
        "drupal/druxt": "^0.4.1",
        "drupal/elasticsearch_connector": "^7.0@alpha",
        "drupal/field_group": "^3",
        "drupal/geofield": "^1",
        "drupal/geofield_map": "^2",
        "drupal/gin": "^3.0@alpha",
        "drupal/gin_login": "^1.0@RC",
        "drupal/graphql": "^4",
        "drupal/graphql_search_api": "^1",
        "drupal/metatag": "^1",
        "drupal/openapi": "^2",
        "drupal/paragraphs": "^1.12",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1",
        "drupal/redis": "^1.4",
        "drupal/restui": "^1",
        "drupal/search_api": "^1.18",
        "drupal/search_api_solr": "^4.1",
        "drupal/simple_oauth": "^5",
        "drupal/stage_file_proxy": "^1",
        "drupal/token": "^1",
        "drupal/viewsreference": "^2",
        "drupal/webform": "^5.13",
        "drupal/workbench": "^1.2",
        "drupal/workbench_access": "^1.0@beta",
        "drush/drush": "^10.3",
        "oomphinc/composer-installers-extender": "dev-master",
        "platformsh/config-reader": "^2.3",
        "predis/predis": "^1.1",
        "zaporylie/composer-drupal-optimizations": "^1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "drupal/core-dev": "^9",
        "grasmash/drupal-security-warning": "^1.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "previousnext/phpunit-finder": "^1",
        "weitzman/drupal-test-traits": "^1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/INSTALL.txt": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/update.php": false,
                "[web-root]/robots.txt": false,
                "[web-root]/sites/README.txt": false,
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/sites/example.sites.php": false,
                "[web-root]/sites/example.settings.local.php": false,
                "[web-root]/sites/default/default.settings.php": false,
                "[web-root]/sites/default/default.services.yml": false
            }
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "web/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Entity sub-types": "https://www.drupal.org/files/issues/2021-08-26/2570593-155.9_2_x.patch"
            }
        },
        "patches-ignore": {
            "predis/predis": {
                "phpunit/phpunit": {
                    "Fix PHP 7 compatibility": "./tests/phpunit_php7.patch",
                    "Fix PHP 8 compatibility": "./tests/phpunit_php8.patch"
                }
            }
        }
    }
}
